{
  "name": "eleventy-base-blog",
  "version": "5.0.2",
  "description": "A starter repository for a blog web site using the Eleventy static site generator.",
  "scripts": {
    "clean": "rimraf ./_site/",
    "watch": "eleventy --watch",
    "serve": "eleventy --serve",
    "start": "npm run dev",
    "dev": "npm run clean && concurrently --kill-others \"npm:dev:styles\" \"npm:dev:11ty\"",
    "dev:styles": "TAILWIND_MODE=watch postcss index.css -o css/output.css --config ./postcss.config.js -w",
    "dev:11ty": "ELEVENTY_ENV=development eleventy --serve --quiet --incremental",
    "build": "npm run clean && npm run prod:styles && npm run prod:build",
    "prod:styles": "NODE_ENV=production postcss index.css -o css/output.css --config ./postcss.config.js",
    "prod:build": "ELEVENTY_ENV=production eleventy",
    "debug": "DEBUG=Eleventy* eleventy",
    "dry-run": "DEBUG=Eleventy* eleventy --dryrun",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/11ty/eleventy-base-blog.git"
  },
  "author": {
    "name": "Zach Leatherman",
    "email": "zachleatherman@gmail.com",
    "url": "https://zachleat.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/11ty/eleventy-base-blog/issues"
  },
  "homepage": "https://github.com/11ty/eleventy-base-blog#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
    "autoprefixer": "^10.3.4",
    "concurrently": "^6.2.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "luxon": "^1.26.0",
    "markdown-it": "^12.1.0",
    "markdown-it-anchor": "^8.1.2",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.9"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "lint-staged": {
    "*.{js,css,md,yaml,yml,json}": "prettier --write"
  }
}
